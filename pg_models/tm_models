from sqlalchemy import Column, Date, String, Integer
from sqlalchemy.ext.declarative import declarative_base

Base = declarative_base()


class TblConfig(Base):
    __tablename__ = 'tbl_config'

    rec_id = Column(Integer, primary_key = True)
    config_day =Column(Date)
    config_manual_submit = Column(Date)
    config_print_path = Column(String)
    config_onthego_path = Column(String)


class TblFinalOrders(Base):
    __tablename__ = 'tbl_final_orders'

    rec_id = Column(Integer, primary_key = True)
    book_id = Column(Integer)
    order_id = Column(Integer)
    order_date = Column(Date)
    order_notes = Column(String)
    order_publisher = Column(String)
    order_book_title = Column(String)
    order_main = Column(Integer)
    order_main_change = Column(Integer)
    order_variant = Column(Integer)
    order_variant_change = Column(Integer)
    order_shelf = Column(Integer)
    order_pull_notes = Column(String)
    order_is_committed = Column(String)

class TblExportOrders(Base):
    __tablename__ = 'tbl_export_orders'

    Publisher = Column(String)
    Title = Column(String)
    Main = Column(String)
    Variant = Column(String)
    Shelf = Column(Integer)
    Notes = Column(String)

class TblCustomers(Base):
    __tablename__ = 'tbl_customers'

    cust_id = Column(Integer, primary_key = True)
    cust_first_name = Column(String)
    cust_last_name = Column(String)
    cust_address_1 = Column(String)
    cust_address_2 = Column(String)
    cust_city = Column(String)
    cust_state = Column(String)
    cust_zip = Column(String)
    cust_phone = Column(String)
    cust_email = Column(String)
    cust_is_active = Column(String)
    cust_email_list = Column(String)
    cust_add_date = Column(Date)
    cust_remove_date = Column(Date)
    cust_exported = Column(String)
    cust_export_date = Column(Date)

class TblExportBooks(Base):
    __tablename__ = 'tbl_export_books'

    Publisher = Column(String)
    Title = Column(String)
    Mature = Column(String)
    All_Ages = Column(String)
    Local = Column(String)
    Subscription_OneShot_All =Column(String)
    Upcoming_Research = Column(String)
    Notes = Column(String)


class TblExportTradeOrders(TblExportOrders):
    __tablename__ = 'tbl_export_trade_orders'


class TblExportTrades(TblExportBooks):
    __tablename__ = 'tble_export_trades'


class TbleBooks(Base):
    __table__ = 'tbl_books'

    book_id = Column(Integer, primary_key = True)